#!/usr/bin/env perl
use Modern::Perl;
use FindBin::libs;
use CodeJuicer::Cmd;

=head1 NAME

codejuicer - CodeJuicer command line interface

=head1 USAGE

  codejuicer <COMMAND> <OPTIONS>

=head1 DESCRIPTION

Command line interface for CodeJuicer tools.

=head1 COMMAND

Run `codejuicer` to see all commands available.

=head1 OPTIONS


Run `codejuicer <tool> --help` to see...

=cut

# TODO ^ finish these POD

CodeJuicer::Cmd->run;

